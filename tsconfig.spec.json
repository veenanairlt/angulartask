{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node",
      "zone.js"          
    ]
  },
  "files": [
    "src/test.ts"        
  ],
  "include": [
    "src/**/*.spec.ts", 
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/main.ts",
    "src/polyfills.ts",
    "node_modules"
  ]
}